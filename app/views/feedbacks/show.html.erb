<div>
	<h1>GREAT!  Here's your review for <%= App.find(@this_feedback.app_id).app_name %></h1> 
  <div>
		<b>I thought the App...</b>
		<ul>
			<% if @this_feedback.useful_vote %>
		    <li>"Fulfills a practical purpose." </li>
			<% end %>
			<% if @this_feedback.enjoyable_vote %>
		    <li>"Is fun and/or a pleasure to use." </li>
			<% end %>
			<% if @this_feedback.sleek_vote %>
		    <li>"Exhibits sleek design." </li>
			<% end %>
			<% if @this_feedback.ui_vote %>
		    <li>"Exhibits a smooth interaction." </li>
			<% end %>
		</ul>
  </div>
  <div>
  	<table>
  		<tr>
  			<th>Criteria</th>
  			<th>Comments</th>
  		</tr>
		  <tr>
		  	<td>Great Features:</td><td><%= @this_feedback.good_text %></td>
      </tr>
			<tr>
				<td>Issues & Areas for Improvement:</td><td><%= @this_feedback.bad_text %></td>
      </tr>
			<tr>
				<td>General Observations and Suggestions:</td><td><%= @this_feedback.suggestions_text %></td>
			<tr>
	</table>
	</div>

	<%= link_to "Edit Review", "/apps/#{@this_feedback.app_id}/feedbacks/#{@this_feedback.id}/edit" %>
	<%= link_to "DELETE Review", "/apps/#{@this_feedback.app_id}/feedbacks/#{@this_feedback.id}", method: :delete %>

	<%= link_to "Back to " + App.find(@this_feedback.app_id).app_name + " page", "/apps/#{@this_feedback.app_id}" %>

	<%= link_to "View other Apps", "/apps" %>
</div>